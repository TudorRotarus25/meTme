<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:id="@+id/list_friends_cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_friends_vertical_margin"
        android:layout_marginBottom="@dimen/list_friends_vertical_margin"
        android:layout_marginLeft="@dimen/list_all_meetings_horizontal_margin"
        android:layout_marginRight="@dimen/list_all_meetings_horizontal_margin"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/all_meetings_cardView_padding_vertical"
            android:paddingBottom="@dimen/all_meetings_cardView_padding_vertical"
            android:paddingLeft="@dimen/all_meetings_cardView_padding_horizontal"
            android:paddingRight="@dimen/all_meetings_cardView_padding_horizontal"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView android:id="@+id/list_friends_icon"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView android:id="@+id/list_friends_name_textView"
                android:gravity="center"
                android:text="Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"/>

            <Button android:id="@+id/list_friends_pickup_button"
                android:textSize="10sp"
                android:backgroundTint="@color/colorAccent"
                android:drawableLeft="@drawable/ic_directions_car_black_18dp"
                android:textAllCaps="false"
                android:text="@string/list_friends_button_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>