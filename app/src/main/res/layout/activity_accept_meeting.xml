<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tudor.rotarus.unibuc.metme.activities.AcceptMeetingActivity">

    <ScrollView
        android:id="@+id/activity_accept_meeting_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_accept_meeting_reject_button"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_accept_meeting_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/google_thumb"/>

            <TextView
                android:id="@+id/activity_accept_meeting_message_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignBottom="@+id/activity_accept_meeting_image"
                android:text="Tudor Rotarus wants to create a meeting with you"
                android:textAlignment="center"
                android:textSize="@dimen/text_extra_big"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/activity_accept_meeting_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_accept_meeting_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/add_meeting_horizontal_margin"
                    android:layout_marginRight="@dimen/add_meeting_horizontal_margin"
                    android:layout_marginTop="@dimen/add_meeting_vertical_padding"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="9"
                    android:text="Meeting title"
                    android:textSize="@dimen/text_big"
                    android:textAlignment="center"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/activity_add_meeting_place_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pressable"
                    android:paddingBottom="@dimen/add_meeting_vertical_padding"
                    android:paddingTop="@dimen/add_meeting_vertical_padding"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_add_meeting_place_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_location_on_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/add_meeting_horizontal_margin"
                        android:layout_marginRight="@dimen/add_meeting_horizontal_margin"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_accept_meeting_place_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Parcul Herastrau" />

                        <TextView
                            android:id="@+id/activity_accept_meeting_place_address_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:text="Strada Dimitrie Cantemir 112" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/activity_accept_meeting_time_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pressable"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/add_meeting_vertical_padding"
                    android:paddingTop="@dimen/add_meeting_vertical_padding">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/activity_accept_meeting_time_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/add_meeting_horizontal_margin"
                        android:layout_marginRight="@dimen/add_meeting_horizontal_margin"
                        android:layout_weight="9"
                        android:text="12 Jul 2016 - 11:45" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/activity_accept_meeting_transport_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/add_meeting_vertical_padding"
                    android:paddingTop="@dimen/add_meeting_vertical_padding">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_directions_car_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/activity_accept_meeting_transport_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/add_meeting_horizontal_margin"
                        android:layout_marginRight="@dimen/add_meeting_horizontal_margin"
                        android:layout_weight="9"
                        android:text="@string/car"
                        android:textAllCaps="true" />

                </LinearLayout>

                <View
                    android:id="@+id/activity_accept_meeting_notify_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/activity_accept_meeting_notification_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/add_meeting_vertical_padding"
                    android:paddingTop="@dimen/add_meeting_vertical_padding">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_notifications_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/activity_accept_meeting_notification_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/add_meeting_horizontal_margin"
                        android:layout_marginRight="@dimen/add_meeting_horizontal_margin"
                        android:layout_weight="9"
                        android:text="@string/notification_text" />

                </LinearLayout>

                <View
                    android:id="@+id/activity_accept_meeting_end_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/activity_accept_meeting_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/accept"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/activity_accept_meeting_reject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_accept_meeting_accept_button"
        android:layout_marginLeft="30dp"
        android:text="@string/decline"
        android:textAllCaps="false" />

</RelativeLayout>
