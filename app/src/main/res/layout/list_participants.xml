<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:id="@+id/list_participants_cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_friends_vertical_margin"
        android:layout_marginBottom="@dimen/list_friends_vertical_margin"
        android:layout_marginLeft="@dimen/list_all_meetings_horizontal_margin"
        android:layout_marginRight="@dimen/list_all_meetings_horizontal_margin"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/all_meetings_cardView_padding_vertical"
            android:paddingBottom="@dimen/all_meetings_cardView_padding_vertical"
            android:paddingLeft="@dimen/all_meetings_cardView_padding_horizontal"
            android:paddingRight="@dimen/all_meetings_cardView_padding_horizontal"
            android:clickable="true"
            android:background="?android:selectableItemBackground">

            <ImageView android:id="@+id/list_participants_icon"
                android:src="@drawable/circle"
                android:layout_width="@dimen/list_friends_circle_size"
                android:layout_height="@dimen/list_friends_circle_size"
                android:layout_centerVertical="true"/>

            <TextView
                android:text="ML"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/list_participants_icon_inner_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/list_participants_icon"
                android:layout_alignRight="@+id/list_participants_icon"
                android:layout_alignTop="@+id/list_participants_icon"
                android:layout_alignBottom="@+id/list_participants_icon"/>

            <TextView android:id="@+id/list_participants_name_textView"
                android:text="Mara Lubieniecki"
                android:textSize="@dimen/list_friends_text_size"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/all_meetings_cardView_inner_padding_horizontal"
                android:paddingRight="@dimen/all_meetings_cardView_inner_padding_horizontal"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/list_participants_icon"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>