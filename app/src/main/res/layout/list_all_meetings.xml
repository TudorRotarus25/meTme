<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:id="@+id/list_all_meetings_cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_all_meetings_vertical_margin"
        android:layout_marginBottom="@dimen/list_all_meetings_vertical_margin"
        android:layout_marginLeft="@dimen/list_all_meetings_horizontal_margin"
        android:layout_marginRight="@dimen/list_all_meetings_horizontal_margin"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/all_meetings_cardView_padding_vertical"
            android:paddingBottom="@dimen/all_meetings_cardView_padding_vertical"
            android:paddingLeft="@dimen/all_meetings_cardView_padding_horizontal"
            android:paddingRight="@dimen/all_meetings_cardView_padding_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView android:id="@+id/list_all_meetings_icon"
                    android:src="@drawable/ic_stars_black_24dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView android:id="@+id/list_all_meetings_name_textView"
                        android:text="Salut!"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView android:id="@+id/list_all_meetings_place_textView"
                        android:text="Salut!"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView android:id="@+id/list_all_meetings_date_textView"
                        android:text="Salut!"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView android:id="@+id/list_all_meetings_time_hour_textView"
                        android:text="17"
                        android:textSize="@dimen/text_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView android:id="@+id/list_all_meetings_time_min_textView"
                        android:text="30"
                        android:textSize="@dimen/text_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>