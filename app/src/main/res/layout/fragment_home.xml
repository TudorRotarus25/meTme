<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.drawer.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/content_main_textView_title"
            android:text="@string/next_meeting"
            android:textSize="@dimen/text_title"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/content_main_title_hour_container"
            android:layout_below="@+id/content_main_textView_title"
            android:layout_marginTop="@dimen/meeting_details_vertical_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content_main_textView_meeting_name"
                android:text="Nume intalnire"
                android:textSize="@dimen/text_big"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/content_main_textView_meeting_time"
                android:layout_below="@+id/content_main_textView_meeting_place"
                android:text="16:30"
                android:textSize="@dimen/text_big"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/content_main_textView_meeting_place"
            android:layout_below="@+id/content_main_title_hour_container"
            android:layout_marginTop="@dimen/meeting_details_vertical_margin"
            android:text="at 7 Strada Liviu Rebreanu"
            android:textSize="@dimen/text_big"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content_main_textView_meeting_departure_time"
            android:layout_below="@+id/content_main_textView_meeting_place"
            android:layout_marginTop="@dimen/meeting_details_vertical_margin"
            android:text="You should leave at 16:14"
            android:textSize="@dimen/text_big"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>
