<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/fragment_home_top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/fragment_home_header_padding_vertical"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView android:id="@+id/fragment_home_title_textView"
                android:textSize="@dimen/fragment_home_title_size"
                android:textColor="@color/fragment_home_top_text_color"
                android:text="Name of the meeting"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_home_header_padding_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_centerHorizontal="true"/>

            <TextView android:id="@+id/fragment_home_location_textView"
                android:textSize="@dimen/fragment_home_location_size"
                android:textColor="@color/fragment_home_top_text_color"
                android:textStyle="italic"
                android:text="at Piata Romana  12:30"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/fragment_home_title_textView"/>

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/fragment_home_progress_bar"
                android:layout_width="@dimen/fragment_home_progress_size"
                android:layout_height="@dimen/fragment_home_progress_size"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/fragment_home_location_textView"/>

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fragment_home_transportation_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/fragment_home_fab_padding_out"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@+id/fragment_home_progress_bar"
                android:layout_marginRight="10dp"
                fab:menu_icon="@drawable/ic_directions_car_white_24dp"
                fab:menu_colorNormal="@color/colorAccent"
                fab:menu_colorPressed="@color/colorAccentPressed"
                fab:menu_labels_ellipsize="end"
                fab:menu_labels_singleLine="true"
                fab:menu_labels_position="right"
                android:elevation="6dp"
                fab:menu_openDirection="up"
                fab:menu_fab_label="Transportation method">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fragment_home_transportation_fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/colorAccent"
                    fab:fab_colorPressed="@color/colorAccentPressed"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fragment_home_transportation_fab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/colorAccent"
                    fab:fab_colorPressed="@color/colorAccentPressed"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fragment_home_transportation_fab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/colorAccent"
                    fab:fab_colorPressed="@color/colorAccentPressed"/>

            </com.github.clans.fab.FloatingActionMenu>

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fragment_home_options_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/fragment_home_fab_padding_out"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@+id/fragment_home_progress_bar"
                android:layout_marginLeft="10dp"
                fab:menu_icon="@drawable/ic_touch_app_white_24dp"
                fab:menu_colorNormal="@color/colorAccent"
                fab:menu_colorPressed="@color/colorAccentPressed"
                fab:menu_labels_ellipsize="end"
                fab:menu_labels_singleLine="true"
                fab:menu_labels_position="left"
                android:elevation="6dp"
                fab:menu_openDirection="up"
                fab:menu_fab_label="Options">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fragment_home_fab_cancel_meeting_button"
                    fab:fab_label="Cancel meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_white_24dp"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/colorAccent"
                    fab:fab_colorPressed="@color/colorAccentPressed"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fragment_home_fab_postpone_meeting_button"
                    fab:fab_label="Postpone meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_snooze_white_24dp"
                    fab:fab_size="mini"
                    fab:fab_colorNormal="@color/colorAccent"
                    fab:fab_colorPressed="@color/colorAccentPressed"/>

            </com.github.clans.fab.FloatingActionMenu>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_home_header_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_home_top_container">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_home_list_padding">

                <TextView
                    android:id="@+id/fragment_home_header_participants_textView"
                    android:text="@string/participants"
                    android:textSize="@dimen/text_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/fragment_home_header_eta_textView"/>

                <TextView
                    android:id="@+id/fragment_home_header_eta_textView"
                    android:text="@string/eta"
                    android:textSize="@dimen/text_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/list_home_participants_inner_horizontal_padding"
                    android:paddingLeft="@dimen/list_home_participants_inner_horizontal_padding"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_home_participants_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_home_header_cardView"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</FrameLayout>
