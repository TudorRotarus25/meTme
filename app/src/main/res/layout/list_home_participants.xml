<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_home_list_padding"
            android:orientation="horizontal">

            <ImageView android:id="@+id/list_home_participants_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView android:id="@+id/list_home_participants_name_textView"
                android:text="Tudor Rotarus"
                android:textSize="@dimen/text_big"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <TextView android:id="@+id/list_home_participants_eta_textView"
                android:text="100 m"
                android:textSize="@dimen/text_big"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>